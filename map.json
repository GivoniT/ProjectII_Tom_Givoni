{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Australian schools coloured by ICSEA score.",
  "width": 900,
  "height": 650,
  "projection": {
    "type": "albers",
    "parallels": [-18, -36],
    "rotate": [-132, 0],
    "center": [0, -27],
    "scale": 1300
  },
  "layer": [
    {
      "data": {
        "url": "https://vega.github.io/editor/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "transform": [{"filter": "datum.id == 36"}],
      "mark": {
        "type": "geoshape",
        "fill": "#eef3fb",
        "stroke": "#8a8a8a",
        "strokeWidth": 0.6
      }
    },
    {
      "data": {"url": "data/project_data.csv"},
      "transform": [
        {"calculate": "toNumber(datum.Latitude)", "as": "lat"},
        {"calculate": "toNumber(datum.Longitude)", "as": "lon"},
        {"calculate": "toNumber(datum.ICSEA)", "as": "icsea_value"},
        {
          "calculate": "datum['School Sector_profile'] ? datum['School Sector_profile'] : datum['School Sector_location']",
          "as": "school_sector"
        },
        {"filter": "isValid(datum.lat) && isValid(datum.lon) && isFinite(datum.icsea_value)"}
      ],
      "mark": {
        "type": "circle",
        "size": 28,
        "opacity": 0.5
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "color": {
          "field": "icsea_value",
          "type": "quantitative",
          "scale": {"scheme": "blues"},
          "legend": {"title": "ICSEA"}
        },
        "tooltip": [
          {"field": "School Name", "type": "nominal", "title": "School"},
          {"field": "icsea_value", "type": "quantitative", "title": "ICSEA"},
          {"field": "school_sector", "type": "nominal", "title": "Sector"}
        ]
      }
    }
  ]
}
