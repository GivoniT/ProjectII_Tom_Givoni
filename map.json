{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Victorian schools coloured by Median VCE with SA2 average ICSEA backdrop.",
  "width": 900,
  "height": 500,
  "background": "#f5f7fa",
  "params": [
    {
      "name": "zoom",
      "value": 11000,
      "bind": {
        "input": "range",
        "min": 7000,
        "max": 22000,
        "step": 250
      }
    },
    {
      "name": "scoreMin",
      "value": 20
    },
    {
      "name": "scoreMax",
      "value": 50
    },
    {
      "name": "selectedSchools",
      "value": []
    }
  ],
  "projection": {
    "type": "mercator",
    "center": [
      145.0,
      -37.5
    ],
    "scale": {
      "expr": "zoom"
    }
  },
  "layer": [
    {
      "data": {
        "url": "data/geojson/output.json",
        "format": {
          "type": "topojson",
          "feature": "SA2_2016_AUST"
        }
      },
      "transform": [
        {
          "filter": "datum['properties']['STE_NAME16'] == 'Victoria'"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#f5e3c9",
        "stroke": "#333333",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "data/geojson/output.json",
        "format": {
          "type": "topojson",
          "feature": "SA2_2016_AUST"
        }
      },
      "transform": [
        {
          "filter": "datum['properties']['STE_NAME16'] == 'Victoria'"
        },
        {
          "calculate": "toNumber(datum['properties']['SA2_MAIN16'])",
          "as": "sa2_key"
        },
        {
          "lookup": "sa2_key",
          "from": {
            "data": {
              "url": "data/results_geo/vic_sa2_icsea_avg.csv"
            },
            "key": "SA2_MAIN16",
            "fields": [
              "icsea_mean",
              "sa2_name",
              "school_count"
            ]
          },
          "as": [
            "icsea_mean",
            "sa2_name_lookup",
            "school_count"
          ]
        },
        {
          "filter": "isValid(datum.icsea_mean)"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#333333",
        "strokeWidth": 0.8
      },
      "encoding": {
        "color": {
          "field": "icsea_mean",
          "type": "quantitative",
          "scale": {
            "scheme": "yellowgreenblue"
          },
          "legend": {
            "title": [
              "Region Fill:",
              "Average ICSEA"
            ],
            "orient": "right"
          }
        },
        "tooltip": [
          {
            "field": "sa2_name_lookup",
            "type": "nominal",
            "title": "Region Name"
          },
          {
            "field": "icsea_mean",
            "type": "quantitative",
            "title": "Average ICSEA Score in the Region",
            "format": ".0f"
          },
          {
            "field": "school_count",
            "type": "quantitative",
            "title": "Schools"
          }
        ]
      }
    },
    {
      "data": {
        "url": "data/combined_df.csv"
      },
      "transform": [
        {
          "filter": "datum.State == 'VIC'"
        },
        {
          "calculate": "datum.Latitude === null || datum.Latitude === '' || datum.Latitude === '-' ? null : toNumber(datum.Latitude)",
          "as": "lat"
        },
        {
          "calculate": "datum.Longitude === null || datum.Longitude === '' || datum.Longitude === '-' ? null : toNumber(datum.Longitude)",
          "as": "lon"
        },
        {
          "calculate": "datum['Median VCE study score'] === null || datum['Median VCE study score'] === '' || datum['Median VCE study score'] === '-' ? null : toNumber(datum['Median VCE study score'])",
          "as": "vce_score"
        },
        {
          "filter": "isFinite(datum.lat) && isFinite(datum.lon) && isFinite(datum.vce_score)"
        }
      ],
      "mark": {
        "type": "circle",
        "size": 70,
        "stroke": "#ffffff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "longitude": {
          "field": "lon",
          "type": "quantitative"
        },
        "latitude": {
          "field": "lat",
          "type": "quantitative"
        },
        "color": {
          "condition": [
            {
              "test": "selectedSchools.length && indexof(selectedSchools, datum['School Name']) >= 0",
              "value": "#ffb81c"
            },
            {
              "test": "datum.vce_score >= scoreMin && datum.vce_score <= scoreMax",
              "value": "#004c97"
            }
          ],
          "value": "#b0b8c5"
        },
        "opacity": {
          "condition": [
            {
              "test": "selectedSchools.length && indexof(selectedSchools, datum['School Name']) >= 0",
              "value": 1
            },
            {
              "test": "datum.vce_score >= scoreMin && datum.vce_score <= scoreMax",
              "value": 0.9
            }
          ],
          "value": 0.2
        },
        "tooltip": [
          {
            "field": "School Name",
            "type": "nominal",
            "title": "School"
          },
          {
            "field": "Suburb",
            "type": "nominal",
            "title": "Suburb"
          },
          {
            "field": "vce_score",
            "type": "quantitative",
            "title": "Median VCE",
            "format": ".1f"
          }
        ]
      }
    },
    {
      "data": {
        "url": "data/geojson/output.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_1"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#85a5c4",
        "strokeWidth": 0.5,
        "fillOpacity": 0
      }
    }
  ],
  "resolve": {
    "scale": {
      "color": "independent"
    }
  }
}
